import java.util.*;
public class Main
{
	public static void main(String[] args) {
		int[] arr={1,2,3,4,5,6,7,8,9};
		Arrays.sort(arr);
		int i=0;
		int j=arr.length-1;
		while(i<j){
		    System.out.print(arr[i]+",");
		    System.out.print(arr[j]+",");
		    i++;
		    j--;
		}
		System.out.print(arr[j]);
	}
}

ans :- 1,9,2,8,3,7,4,6,5

